{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build",
      "command": "g++",
      "args": [
        "-g",
        "-Wall",
        "-Wextra",
        "-std=c++17",
        "${workspaceFolder}/src/*.cpp",
        "-o",
        "${workspaceFolder}/main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
